#include <bits/stdc++.h>
using namespace std;
main()
{
   int n;
   cin>>n;
   int a[n],max=0,min=110,maxi=0,mini=0;
   for(int i=1;i<=n;i++)
   {
       int a;
       cin>>a;
       if(a>max)
       {
           maxi=i;
           max=a;
       }
       if(a<=min)
       {
           mini=i;
           min=a;
       }
   }
 
   if(maxi>mini)
   {
       cout<<((maxi-1)+(n-mini)-1);
   }
    else
        cout<<(maxi-1)+(n-mini);
 
}
