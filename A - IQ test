#include<iostream>
#include<bits/stdc++.h>
using namespace std;
main()
{
    int n,i;
    cin>>n;
    int a[n];
    for(i=0;i<n;i++)
    {
        cin>>a[i];
    }
    if(((a[0]%2==0) && (a[1]%2==0)) || ((a[1]%2==0) && (a[2]%2==0)) || ((a[0]%2==0) && (a[2]%2==0)))
       {
           for(i=0;i<n;i++)
             {
                 if(a[i]%2!=0)
 
                 {
                   cout<<i+1;break;
                 }
 
             }
       }
        else
        {
            for(i=0;i<n;i++)
             {
                 if(a[i]%2==0)
                  {cout<<i+1;break;
 
                  }              }
        }
 
}
