#include <bits/stdc++.h>
using namespace std;
main()
{
    int n;
    cin>>n;
 
    if(n==1)
    {
        cout<<"I hate it";
    }
    else
    {
        cout<<"I hate that ";
        for(int i=2;i<n;i++)
    {
        if(i%2==0)
            cout<<"I love ";
        else
            cout<<"I hate ";
 
        cout<<"that ";
    }
    if(n%2==0)
            cout<<"I love it";
        else
            cout<<"I hate it";
 
    }
 
}
