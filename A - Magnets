#include<bits/stdc++.h>
using namespace std;
main()
{
    int n;
    cin>>n;
    int count=0;
    string s,b;
    for(int i=0;i<n;i++)
       {
           cin>>s;
           b+=s;
       }
    for(int i=0;i<b.size();i++)
    {
        if(b[i]==b[i+1])
            count++;
    }
    cout<<count+1;
 
}
